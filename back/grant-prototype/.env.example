# Gemini API Configuration
# Get your API key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# Optional: Use Vertex AI instead of Gemini API
# GOOGLE_GENAI_USE_VERTEXAI=1
# GOOGLE_CLOUD_PROJECT=your_project_id
# GOOGLE_CLOUD_LOCATION=us-east4

# Crawl4AI Configuration
# Option 1: Use Gemini for LLM extraction (recommended, no additional cost)
CRAWL4AI_MODEL=gemini-1.5-pro
CRAWL4AI_USE_GEMINI=true

# Option 2: Use OpenAI for LLM extraction (requires separate API key)
# OPENAI_API_KEY=your_openai_api_key_here
# CRAWL4AI_MODEL=gpt-4o

# Playwright Configuration (fallback scraping)
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_TIMEOUT=30000  # milliseconds

# Scraper Configuration
SCRAPER_USER_AGENT="Grant-Harness/0.1.0 (+https://whisperlooms.com)"
SCRAPER_DOWNLOAD_DELAY=2  # Seconds between requests (be respectful)
SCRAPER_CONCURRENT_REQUESTS=1  # Number of concurrent requests

# Grant Filtering
GRANT_FROM_DATE=2026-01-01  # Only scrape grants opening from this date onwards

# Logging
LOG_LEVEL=INFO
