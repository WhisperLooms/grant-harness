│   └── qld_grants.py
├── gemini_store/
│   ├── __init__.py
│   ├── file_manager.py
│   ├── corpus_builder.py
│   └── query_engine.py
├── matching/
│   ├── __init__.py
│   ├── company_analyzer.py
│   └── grant_matcher.py
├── models/
│   ├── __init__.py
│   └── entities.py
├── tests/
│   ├── test_scrapers.py
│   ├── test_gemini_store.py
│   └── test_matching.py
│   ├── evalsets/                # Test scenarios
│   └── runners/                 # Evaluation scripts
├── deployment/                  # Vertex AI Agent Engine deployment
│   ├── deploy.py                # Deploy agent to Vertex AI
